{
    "compilerOptions": {
        "target": "es6",
        "outDir": "dist/cli",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ES2021",
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/cli/**/*.ts",
        "src/controller/**/*.ts",
        "src/resolvers/**/*.ts",
        "src/utils/**/*.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "src/app/**",
        "src/app/components/**",
    ],
    "files": [
        "src/cli.ts"
    ]
}